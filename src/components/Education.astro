---
import Separator from "./Separator.astro";
import CalendarIcon from "./icons/CalendarIcon.astro";
import GraduationIcon from "./icons/GraduationIcon.astro";

const education = [
  {
    title: "Ingeniería en desarrollo de software",
    institution: "Universidad Autónoma de Baja California Sur",
    date: "2020 - 2024",
    description:
      "Estudios en desarrollo de software, bases de datos, algoritmos y estructuras de datos, entre otros temas.",
  },
  {
    title: "Bachillerato en Técnico en mantenimiento de computo",
    institution: "CECYTE 04",
    date: "2017-2020",
    description:
      "Estudios en mantenimiento de computadoras, redes y sistemas operativos.",
  },
];
---

<section>
  <div class="flex items-center gap-2 my-8">
    <GraduationIcon />
    <h2 class="text-3xl font-bold text-black pb-1">Experiencia</h2>
  </div>
  <div class="w-full space-y-8">
    {
      education.map((edu) => (
        <div class="grid grid-cols-1 gap-4 md:grid-cols-[1fr_2fr]">
          <div class="flex gap-2 text-gray-500">
            <CalendarIcon />
            <p>{edu.date}</p>
          </div>
          <div>
            <h3 class="text-xl font-bold text-black">{edu.title}</h3>
            <h5 class="text-lg font-medium text-black">{edu.institution}</h5>
            <p class="text-base font-base text-gray-600">{edu.description}</p>
          </div>
        </div>
      ))
    }
    <Separator />
  </div>
</section>
