---
import FolderGitIcon from "./icons/FolderGitIcon.astro";
import GithubIcon from "./icons/GithubIcon.astro";
import SquareArrowIcon from "./icons/SquareArrowIcon.astro";
import Separator from "./Separator.astro";
import { Badge } from "./ui/badge";

const projects = [
  {
    title: "Proyecto 1",
    description:
      "Proyecto de desarrollo de una aplicación web para la gestión de tareas. Desarrollado con React y Firebase.",
    skills: ["React", "Firebase", "TailwindCSS"],
    image: "https://placehold.co/600x400",
    repoLink: "https://www.github.com",
    demoLink: "https://www.github.com",
  },
  {
    title: "Proyecto 2",
    description:
      "Proyecto de desarrollo de una aplicación web para la gestión de tareas. Desarrollado con React y Firebase.",
    skills: ["React", "Firebase", "TailwindCSS"],
    image: "https://placehold.co/600x400",
    repoLink: "https://www.github.com",
    demoLink: "https://www.github.com",
  },
];
---

<section>
  <div class="flex items-center gap-2 my-8">
    <FolderGitIcon />
    <h2 class="text-3xl font-bold text-black pb-1">Proyectos</h2>
  </div>
  <div class="w-full grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
    {
      projects.map((project) => (
        <article class="flex flex-col rounded-lg shadow-lg overflow-hidden">
          <img
            src={project.image}
            alt={project.title}
            class="w-full h-64 object-cover rounded-t-lg"
          />
          <div class="p-4 rounded-lg">
            <h3 class="text-xl font-bold text-black">{project.title}</h3>
            <p class="text-gray-600">{project.description}</p>
            <div class="flex items-center gap-2 mt-4">
              {project.skills.map((skill) => (
                <Badge className="px-2 py-1 bg-gray-200 text-gray-600 rounded-lg text-sm">
                  {skill}
                </Badge>
              ))}
            </div>
            <div class="flex items-center gap-4 mt-4">
              <a
                href={project.demoLink}
                class="inline-flex items-center gap-x-2 rounded-lg hover:shadow py-2 px-4 bg-white text-black border border-gray-200 transition-shadow"
                target="_blank"
              >
                <GithubIcon />
                Código
              </a>
              <a
                href={project.repoLink}
                class="inline-flex items-center gap-x-2 rounded-lg hover:shadow py-2 px-4 bg-black text-white transition-shadow"
                target="_blank"
              >
                <SquareArrowIcon />
                Demo
              </a>
            </div>
          </div>
        </article>
      ))
    }
  </div>
  <Separator />
</section>
