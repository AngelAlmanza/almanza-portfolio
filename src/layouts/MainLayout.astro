---
interface Props {
	title: string;
}

const { title } = Astro.props;
import Header from '@/components/Header.astro';
import '../styles/global.css';
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content="Portafolio de Angel Almanza" />
		<meta name="author" content="Angel Almanza" />
		<meta name="keywords" content="Desarrollador, Full Stack, JavaScript, React, Node.js, Express, Firebase" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="bg-white">
		<div class="w-full max-w-7xl min-h-screen mx-auto">
			<Header />
			<main class="px-4">
				<slot />
			</main>
		</div>
	</body>
</html>
